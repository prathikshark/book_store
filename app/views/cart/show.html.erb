<style>
h1{
  margin-top:30px;
  margin-left:600px;
  color:white;
}
   .container{
    display:grid;
    gap: 20px;
   }
   .row{
    background-color:lightblue;
    height:70px;
    align-items:center;
    display:flex;
    flex-direction: column;
    justify-content:center;  
    border-radius:10px;

   }
   .r{
    font-size:20px;
   }
   .p1{
    color:white;
    font-size:20px;
   }
   .a{
    display:flex;
    flex-direction:column;
    justify-content:center;
    margin-left:44vw;
    margin-top:30px;
    
   }
   .total{
    color:white;
    font-size:25px;

   }
   .btn{
    margin-left:80px;
    margin-top:10px;
   }
</style>


<h1>YOUR BOOKS</h1>

<div  class="container">
<% if @books.present? %>
<%i=1%>
<% @books.each do |book| %>
    <div class="row"> 
     <p class="r"> <%= i %>.</p>
    <p class="r"> <%= book.name %> </p>
    <p class="r"><%= book.author %></p>
    <p class="r">Rs. <%= book.price %></p> 
    <%= button_to 'delete', test_path ,method: :delete,params: {id: book.id} ,class: 'btn btn-danger'%>
<% i=i+1 %>

  </div>
    <% end %>
    <% else %>
    <p class="p1">YOUR CART IS EMPTY :(</p>
<% end %>   
</div>

<div class="a">
<div class="total">total amount: <%= @total %> </div>
<%= button_to 'Pay',payment_path ,method: :get ,class: 'btn btn-primary'%>
</div>



