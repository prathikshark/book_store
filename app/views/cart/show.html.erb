<style>
   .container{
    display:grid;
    gap: 20px;
   }
   .row{
    background-color:yellow;
    height:70px;
    align-items:center;
    display:flex;
    flex-direction: column;
    justify-content:center;  
    border-radius:10px;

   }
</style>


<h1>YOUR BOOKS</h1>
<div  class="container">
<% if @books.present? %>
<% @books.each do |book| %>
    <div class="row"> 
    <p class="r"> <%= book.name %> </p>
    <p class="r"><%= book.author %></p>
    <p class="r"><%= book.quantity %></p> 
  </div>
    <% end %>
    <% else %>
    <p>No books found.</p>
<% end %>   
</div>


